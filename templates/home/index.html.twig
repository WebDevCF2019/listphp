{% block contenu %}
    {% for item in liste %}
        <hr id="link{{ item.idlistephp }}"><br>
        <h3 title="{{ item.thedesc }}">{{ item.thetitle }}</h3>
        <p class="lead">{{ item.thedesc }}</p>
        <p>{{ item.thetext|nl2br }}</p>
        <h6>Liens externes</h6>
        <ul>
            {% for link in item.Linkphplinkphp %}
            <li>
                <a href="{{ link.theurl }}" title="{{ link.thedesc }}" target="_blank">{{ link.thetitle }}</a> - {{ link.thedesc }}
            </li>
            {% else %}
                <li>Pas de liens</li>
            {% endfor %}
        </ul>

    {% else %}
        <h3>Pas encore de fonctions</h3>
    {% endfor %}
{% endblock %}

